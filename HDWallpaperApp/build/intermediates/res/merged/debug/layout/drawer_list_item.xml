<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/left_menu_selector" >

        <View
            android:id="@+id/drawer_list_item_divider"
            android:layout_width="28dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/drawer_list_item_text_label"
            style="@style/LeftMenuItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="18dp"
            android:paddingStart="42dp"
            android:paddingEnd="16dp"
            android:paddingTop="18dp"
            android:textColor="@drawable/text_selector" />
    </LinearLayout>

    <View
        android:id="@+id/drawer_list_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_color" />

    <TextView
        android:id="@+id/drawer_list_categories_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingBottom="2dp"
        android:paddingRight="12dp"
        android:paddingTop="2dp"
        android:text="@string/categories_label"
        android:textColor="@color/text_color"
        android:textSize="12sp"
        android:visibility="gone" />

</LinearLayout>